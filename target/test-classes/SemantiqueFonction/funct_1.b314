declare and retain 
    x as integer;
    t4 as integer[42];
    t5 as integer[42, 42];
    t6 as integer[42, 42];
when your turn
by default
    do 
        compute x + 1 - (48 + 2)
        compute life / 2 * (longitude / grid size)
        compute ( ammo count + 1 - x ) % 5 - 2
        compute x - t4[0]
        compute x * t5[0,x]
        compute x % t6[0, t5[0, t4[0]]] + 2
        compute x % t6[0, t4[0]] * latitude + grid size
        compute x % t6[t4[0], t5[grid size, t4[0]]] + 2
    done